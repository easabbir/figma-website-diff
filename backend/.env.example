# Application Settings
APP_NAME=Figma-Website UI Comparison Tool
APP_VERSION=1.0.0
DEBUG=True

# API Settings
API_V1_PREFIX=/api/v1

# CORS Settings (JSON array format)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# File Storage
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
STATIC_DIR=static
MAX_UPLOAD_SIZE=52428800

# Figma API
FIGMA_API_BASE_URL=https://api.figma.com/v1
FIGMA_DEFAULT_SCALE=2

# Figma OAuth 2.0 (Optional - for higher rate limits)
# Create an OAuth app at https://www.figma.com/developers/apps
FIGMA_CLIENT_ID=your_client_id_here
FIGMA_CLIENT_SECRET=your_client_secret_here
FIGMA_REDIRECT_URI=http://localhost:8000/api/v1/oauth/callback

# Website Capture
PLAYWRIGHT_TIMEOUT=30000
DEFAULT_VIEWPORT_WIDTH=1920
DEFAULT_VIEWPORT_HEIGHT=1080

# Comparison Settings
COLOR_TOLERANCE=5
SPACING_TOLERANCE=2
PIXEL_DIFF_THRESHOLD=0.95

# Redis (optional, for production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery (optional, for production)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
